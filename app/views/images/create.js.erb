if($("#<%=j dom_id(@image)%>").length){
  $("#<%=j dom_id(@image)%>").replaceWith("<%=j render 'images/image', image: @image %>");
}else{
  $("#images").append("<%=j render 'images/image', image: @image %>");
}

if($('#edit_image_script').length){
  $("#edit_image_script").html("<%=j render 'blocks/edit_image_script', block: @image.attachable %>");
}

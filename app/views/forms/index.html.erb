<p id="notice"><%= notice %></p>

<h1>Forms</h1>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>About</th>
          <th>Description</th>
          <th>Open at</th>
          <th>Close at</th>
          <th>Is published</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @forms.each do |form| %>
          <tr>
            <td><%= form.name %></td>
            <td><%= form.about %></td>
            <td><%= form.description %></td>
            <td><%= form.open_at %></td>
            <td><%= form.close_at %></td>
            <td><%= form.is_published %></td>
            <td><%= link_to 'Show', form %></td>
            <td><%= link_to 'Edit', edit_form_path(form) %></td>
            <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'New Form', new_form_path, class: "btn btn-success" %>

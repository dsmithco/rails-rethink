<div class="hero_image_<%= hero_image.id %>">
  <div class="form-group ">
    <%= image_tag hero_image.asset(:medium) if hero_image.present?%>
  </div>
  <div class="form-group">
    <%= link_to 'Remove Image', hero_image_path(hero_image), method: :delete, class: 'btn btn-danger', remote: true if hero_image.asset.present? %>
  </div>

</div>

<div class="col-sm-4 hero_image_<%= hero_image.id %>">
  <div class="panel panel-default">
    <div>
      <%= image_tag hero_image.asset(:medium) if hero_image.present?%>
    </div>
    <div class=" panel-body" ng-init="webCtrl.hero_image[<%=hero_image.id%>]=<%=hero_image.to_json%>">
      <div class="form-group">
        <input type="text"
               name="title"
               ng-model="webCtrl.hero_image[<%=hero_image.id%>].name"
               ng-blur="webCtrl.save_hero(webCtrl.hero_image[<%=hero_image.id%>])"
               class="form-control"
               placeholder="Title"/>
      </div>
      <div class="form-group">
        <textarea type="text"
                  name="sub_title"
                  ng-blur="webCtrl.save_hero(webCtrl.hero_image[<%=hero_image.id%>])"
                  ng-model="webCtrl.hero_image[<%=hero_image.id%>].about"
                  class="form-control"
                  placeholder="Subtitle"></textarea>
      </div>
      <div class="form-group">
        <input  type="text"
                name="link"
                ng-blur="webCtrl.save_hero(webCtrl.hero_image[<%=hero_image.id%>])"
                ng-model="webCtrl.hero_image[<%=hero_image.id%>].link"
                class="form-control"
                placeholder="Link"/>
      </div>
      <%= link_to 'Remove Image'.html_safe, hero_image, method: :delete, class: 'btn btn-danger btn-block', remote: true, data: {disable_with: "<i class='fa fa-gear fa-spin'></i> Removing...", confirm: "Are you sure?"} if hero_image.asset.present? %>
    </div>

  </div>
</div>

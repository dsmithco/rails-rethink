<% if params[:keyword].present? %>
  <section class="section">
    <h1 class="text-center"><%= params[:keyword].titleize %></h1>
  </section>
<% end %>

<% cache [@website, current_user] do %>
  <% if @website.about.present? %>
    <section class="section">
      <%= @website.about.html_safe %>
    </section>
  <% end %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Websites</h1>
<div class="table-container">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Account</th>
      <th>Name</th>
      <th>About</th>
      <th class="nowrap">Domain url</th>
      <th>Google</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.account %></td>
        <td><%= website.name %></td>
        <td><%= website.about %></td>
        <td><%= website.domain_url %></td>
        <td><%= website.google_analytics %></td>
        <td><%= website.facebook %></td>
        <td><%= website.twitter %></td>
        <td><%= website.tags %></td>
        <td>
          <div class="button-group">
            <%= link_to 'Show', website, class: 'button small' %><%= link_to 'Edit', edit_website_path(website), class: 'button small' %><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button small' %></td>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<br>

<%= link_to 'New Website', new_website_path, class: 'button success-bg' %>

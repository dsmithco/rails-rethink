<!-- Blocks tab content -->
<div id="blocks">
  <fieldset>
    <legend>
      Blocks <%= link_to 'New Block', new_block_path, remote: true, class: 'pull-right btn btn-success' %>
    </legend>
    <div class="form-group">
      <div class="panel panel-default">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>
                  ID
                </th>
                <th>
                  Title
                </th>
                <th>
                  Type
                </th>
                <th>
                  Position
                </th>
                <th>
                  Front
                </th>
                <th>

                </th>
              </tr>
            </thead>
            <tbody>
              <% @website.blocks.each do |block| %>
                <tr id="block_<%=block.id%>">
                  <td>
                    <%= block.id %>
                  </td>
                  <td>
                    <%= block.name.present? ? block.name : '-' %>
                  </td>
                  <td>
                    <%= block.block_type %>
                  </td>
                  <td>
                    <%= block.position %>
                  </td>
                  <td class="">
                    <%= "<i class='fa fa-star fa-fw'></i>".html_safe if block.front_page.present? %>
                  </td>
                  <td class="text-right">
                    <%= link_to 'Edit', edit_block_path(block), remote: true, class: 'btn btn-sm btn-primary' %>
                    <%= link_to 'Remove', block_path(block), remote: true, method: :delete, data: {confirm: "Are you sure you want to delete the block #{block.name}"}, class: 'btn btn-sm btn-danger', disabled: !(can? :destroy, block) %>
                  </td>
                </tr>
              <% end %>
              <% unless @website.blocks.present? %>
                <tr>
                  <td colspan="4">
                    No records
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </fieldset>
</div>

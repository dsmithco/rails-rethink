

<h1>Blocks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Block type</th>
      <th>Position</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.name %></td>
        <td><%= block.website %></td>
        <td><%= block.block_type %></td>
        <td><%= block.position %></td>
        <td><%= block.location %></td>
        <td><%= link_to 'Show', block %></td>
        <td><%= link_to 'Edit', edit_block_path(block) %></td>
        <td><%= link_to 'Destroy', block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Block', new_block_path %>

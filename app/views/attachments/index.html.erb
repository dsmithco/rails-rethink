<%= render 'attachments/attachments', '@attachments': @logos%>

<br>

<%= link_to 'New Attachment', new_attachment_path, class: 'btn btn-primary' %>


<%= form_for Logo.new do |f| %>
  <%= f.label :image, "Upload attachment:" %>
  <%= f.file_field :asset, multiple: true, name: "attachment[asset]" %>
  <%= f.submit %>
<% end %>

<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
  <div class="progress"><div class="bar" style="width: 0%"></div></div>
</div>
</script>

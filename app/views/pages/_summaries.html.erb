<ul class="media-list">
  <% pages.each do |page| %>
    <li class="media media-<%= page.id %>">
      <div class="media-left">
        <%= link_to (image_tag page.image.thumb, class: 'media-object'), page_path(page) if page.image.present? %>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= link_to page.name, page_path(page) %></h4>
        <%= truncate(strip_tags(page.about), :length => 250) if page.about.present?%>
      </div>
    </li>
  <% end %>
</ul>

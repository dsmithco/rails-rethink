<!DOCTYPE html>
<html>
  <head>
    <title><%= "#{@page.name} - " if @page.present? %> <%= @current_website.try(:name) %></title>
    <%= csrf_meta_tags %>
    <meta http-equiv=X-UA-Compatible content="IE=edge">
    <meta name=viewport content="width=device-width,initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'app', media: 'all', 'data-turbolinks-track': 'reload' if current_user.present?%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'app', 'data-turbolinks-track': 'reload' if current_user.present? %>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <%= render 'layouts/google_script' %>

    <%= yield :head %>

  </head>
  <body class="<%= controller_name %> <%= action_name %>" id="body" ng-controller="BaseController as baseCtrl" ng-init="baseCtrl.website = <%= @current_website.to_json %>; baseCtrl.website.logo = <%= @current_website.logo.to_json %>" >
    <!-- Fixed navbar -->
    <%= render 'layouts/top_nav', inverse: true, fixed: true %>

    <%= render partial: 'layouts/messages' %>

    <% if "#{params[:controller]}_#{params[:action]}" == "websites_home" && @current_website.hero_images.any? %>
      <% cache [@current_website.hero_images, current_user] do %>
        <%= render 'layouts/hero_image' %>
      <% end %>
    <% end %>



    <div class="">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
  <footer class="footer">
    <div class="container">
      <% cache [@current_website, current_user] do %>
        <p class="text-muted text-center"> <%= @current_website.name %> &copy; <%= Time.now.year %></p>
      <% end %>
    </div>
  </footer>
</html>

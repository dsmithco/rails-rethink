<!DOCTYPE html>
<html>
  <head>
    <title><%= "#{@page.name} - " if @page.present? %> <%= @current_website.try(:name) %></title>
    <%= csrf_meta_tags %>
    <meta http-equiv=X-UA-Compatible content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet">
    <meta name="HandheldFriendly" content="true">

    <!-- <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %> -->
    <% if @current_website.present? %>
      <%= stylesheet_link_tag "/websites/#{@current_website.id}/stylesheet.css", media: 'all', 'data-turbolinks-track': 'reload' %>
    <% else %>
      <%= stylesheet_link_tag 'applicatin', media: 'all', 'data-turbolinks-track': 'reload'%>
    <% end %>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" media="screen" title="no title" charset="utf-8">
    <%= stylesheet_link_tag 'app', media: 'all', 'data-turbolinks-track': 'reload' if current_user.present?%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'app', 'data-turbolinks-track': 'reload' if current_user.present? %>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- <meta name="turbolinks-cache-control" content="no-preview"> -->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <%= yield :head %>

  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <%= render 'layouts/google_script' %>
    <div id="body">
    <!-- Fixed navbar -->

    <%= render 'layouts/top_nav', inverse: true, fixed: false %>

    <%= render 'layouts/messages' %>

    <% if "#{params[:controller]}_#{params[:action]}" == "websites_home" && @current_website.hero_images.any? %>
      <% cache [@current_website.hero_images, current_user, @website.blocks.where(front_page: true)] do %>
      <%= link_to '<i class="glyphicon glyphicon-pencil"></i> Edit'.html_safe, edit_website_path(@current_website), class: 'edit_link' if can? :update, @current_website %>

      <div class="hero-unit <%= @current_website.hero_images.first.text_align %>" style="background-image:url(<%=@current_website.hero_images.first.asset(:hero)%>)">
        <div class="hero-unit-cell">
          <div class="hero-unit-content text-center container-fluid">
            <div>
              <%= content_tag(:h1, @current_website.hero_images.first.name) if @current_website.hero_images.first.name.present?%>
            </div>
            <div>
              <%= content_tag(:h2, @current_website.hero_images.first.about) if @current_website.hero_images.first.about.present?%>
            </div>
            <!-- <p>
              <%# link_to 'Create Your Website', new_user_registration_path, remote: true, class: "btn btn-primary btn-lg" %>
            </p> -->
          </div>
        </div>
      </div>

        <%= content_tag('div', "#{render 'blocks/main_blocks', blocks: @website.blocks.where(front_page: true)}".html_safe, id: 'main-blocks') %>
      <% end %>
    <% end %>

    <%= yield :hero %>

    <%= yield :top_block %>

    <div class="container">
      <%= yield %>
    </div>

    <%= yield :bottom_block %>


  </div>

  </body>
  <footer class="footer">
    <div class="container">
      <%= yield :footer %>
      <p class="text-muted text-center"> <%= @current_website.name %> &copy; <%= Time.now.year %></p>
    </div>
  </footer>
</html>

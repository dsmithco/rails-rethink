<!DOCTYPE html>
<html>
  <head>
    <title><%= "#{@page.name} - " if @page.present? %> <%= @current_website.try(:name) %></title>
    <%= csrf_meta_tags %>
    <meta http-equiv=X-UA-Compatible content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet">
    <meta name="HandheldFriendly" content="true">

    <!-- <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %> -->
    <% if @current_website.present? %>
      <%= stylesheet_link_tag "/websites/#{@current_website.id}/stylesheet.css", media: 'all', 'data-turbolinks-track': 'reload' %>
    <% else %>
      <%= stylesheet_link_tag 'applicatin', media: 'all', 'data-turbolinks-track': 'reload'%>
    <% end %>
    <%= stylesheet_link_tag 'app', media: 'all', 'data-turbolinks-track': 'reload' if current_user.present?%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'app', 'data-turbolinks-track': 'reload' if current_user.present? %>
    <!-- <meta name="turbolinks-cache-control" content="no-preview"> -->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <%= yield :head %>

  </head>
  <body class="fixed-nav <%= controller_name %> <%= action_name %>">
    <%= render 'layouts/google_script' %>

    <div id="body">
    <!-- Fixed navbar -->

    <%= render 'layouts/top_nav', inverse: true, fixed: true %>

    <%= render 'layouts/messages' %>

    <%= render 'layouts/hero_image' %>

    <%= yield :hero %>

    <%= yield :top_block %>

    <div class="container">
      <%= yield %>
    </div>

  </div>

  </body>
  <footer class="footer">
    <div class="container">
      <%= yield :footer %>
      <p class="text-muted text-center"> <%= @current_website.name %> &copy; <%= Time.now.year %></p>
    </div>
  </footer>
</html>

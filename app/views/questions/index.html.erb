<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>About</th>
      <th>Help</th>
      <th>Question type</th>
      <th>Is required</th>
      <th>Conditional</th>
      <th>Conditional value</th>
      <th>Conditional condition</th>
      <th>Position</th>
      <th>Deleted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.name %></td>
        <td><%= question.about %></td>
        <td><%= question.help %></td>
        <td><%= question.question_type %></td>
        <td><%= question.is_required %></td>
        <td><%= question.conditional_id %></td>
        <td><%= question.conditional_value %></td>
        <td><%= question.conditional_condition %></td>
        <td><%= question.position %></td>
        <td><%= question.deleted_at %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path %>
